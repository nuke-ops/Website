{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "python": "C:\\Python\\Python310\\python.exe"
        }
    ]
}